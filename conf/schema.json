{
    "type": "object",
    "required" : ["description", "login_hosts", "cores_per_node", "gpus_per_node"],
    "properties": {
        "description": {
            "description": "Short title for the host",
            "type": "string"
        },
        "login_hosts" : {
            "type":"array",
            "description": "Accepted login hosts",
            "items": {"type":"string"}
        },
        "cores_per_node" : {
            "description": "Number of cores per node",
            "type": "integer"
        },
        "gpus_per_node": {
            "description": "Number of gpus per node",
            "type": "integer"
        },
        "min_cores_per_gpu" : {
            "description": "Minimuyn number of cores per gpu",
            "type": "integer"
        },
        "qsettings" :{
            "description": "Pre-set queue settings",
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "required": ["ntasks", "cpus-per_task"],
                "properties": {
                    "ntasks": {"type":"integer"},
                    "cpus-per-task" : {"type":"integer"},
                    "ntasks-per-node" : {"type":"integer"},
                    "nodes" : {"type":"integer"},
                    "gres": {"type":"string"},
                    "time" : {"type":"string"},
                    "qos" : {"type": "string"}
                }
            }
        },
        "default" : {
            "description": "default settings label",
            "type": "string"
        },
        "modules" :{
            "description": "Module bundles",
            "additionalProperties": {
                "type": "array",
                "items": {"type":"string", "description": "module name"}
            }
        },
        "cmd_settings":{
            "description": "Predefined command line settings",
            "type": "object",
            "additionalProperties": {
                "type": "string"
            }
        },
        "biobb_apps_path": {
            "type": "string",
            "description": "common prefix to biobb root directory on remote host"
        }
    }
}